#include<stdio.h>
int main ()
{
    int n = 5, i,j;
    
    for( i = 1; i <= n; i++){
        for(j = i; j < n; j++){
            printf(" ");
        }
        char ch = 'a' + (i - 1);
        
        for(int k = 0; k < i; k++){
            printf("%c ",ch);
        }
        
        printf("\n");
    }
    
    for(i = 1; i < n; i++){
        for( j = 1; j <= i; j++){
            printf(" ");
        }
        
        char ch = 'a' + ( n -1 + i);
        
        for( int k = i; k < n; k++){
            printf("%c ",ch);
        }
        
        printf("\n");
    }
        


     return 0;
}

#include <stdio.h>

int main() {
   int n = 5;
   for(int i = 1; i <= n; i++){
       for(int j = 1; j <= n - i; j++){
           printf(" ");
       }
       printf("/");
       
       if(n == i){
           for(int k = 1; k <= (i - 1) * 2; k++){
               printf("_");
           }
       }else{
           for(int k = 1; k <= (i - 1) * 2; k++){
               printf(" ");
           }
       }
       
       printf("\\\n");
   }

    return 0;
}

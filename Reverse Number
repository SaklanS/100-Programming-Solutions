// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int n,r,rev = 0;
    printf("Enter the value of N: ");
    scanf("%d",&n);
    
    while(n!=0){
        r = n %10;
        rev = (rev * 10) + r;
        n = n / 10;
 
    }
    printf("The position of numbers sum is: %d", rev);

    return 0;
}
